<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/full"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
    tools:context="com.example.petre.colour.PrecisionSquare"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/background"
        android:src="@drawable/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.507" />

    <com.example.petre.colour.Square
        android:layout_width="@dimen/inner_square"
        android:layout_height="@dimen/inner_square"
        android:id="@+id/square_color"
        app:layout_constraintTop_toTopOf="@+id/outer_wheel"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/outer_wheel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/outer_wheel"
        app:layout_constraintBottom_toBottomOf="@+id/outer_wheel"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:layout_width="@dimen/square"
        android:layout_height="@dimen/square"
        android:id="@+id/square_outline"
        android:src="@drawable/square_outline"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/outer_wheel"
        app:layout_constraintTop_toTopOf="@+id/outer_wheel"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/outer_wheel"
        app:layout_constraintBottom_toBottomOf="@+id/outer_wheel"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <ImageView
        android:layout_width="@dimen/part_wheel"
        android:layout_height="@dimen/part_wheel"
        android:id="@+id/outer_wheel"
        android:src="@drawable/part_wheel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.485"
        android:layout_marginTop="8dp"  />

    <ImageView
        android:layout_width="@dimen/circle"
        android:layout_height="@dimen/circle"
        android:id="@+id/circle"
        android:src="@drawable/circle"
        tools:layout_editor_absoluteY="89dp"
        tools:layout_editor_absoluteX="60dp" />

    <ImageView
        android:layout_width="@dimen/color"
        android:layout_height="@dimen/color"
        android:src="@drawable/color_bar"
        android:id="@+id/color_bar"
        app:layout_constraintRight_toRightOf="@+id/outer_wheel"
        app:layout_constraintTop_toTopOf="@+id/outer_wheel"
        android:layout_marginTop="110dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/precision"
        android:src="@drawable/precision_test"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />



</android.support.constraint.ConstraintLayout>
