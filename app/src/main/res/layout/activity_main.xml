<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/full"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
    tools:context="com.example.petre.colour.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:layout_width="360dp"
        android:layout_height="568dp"
        android:id="@+id/background"
        android:src="@drawable/background"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp" />

    <com.example.petre.colour.Square
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:id="@+id/square_color"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/outer_wheel"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/outer_wheel"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/outer_wheel"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/outer_wheel" />

    <ImageView
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:id="@+id/square_outline"
        android:src="@drawable/square_outline"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/outer_wheel"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/outer_wheel"
        app:layout_constraintBottom_toBottomOf="@+id/outer_wheel"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/outer_wheel" />


    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/outer_wheel"
        android:src="@drawable/part_wheel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.463" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/circle"
        android:src="@drawable/circle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteY="89dp"
        tools:layout_editor_absoluteX="60dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/color_bar"
        tools:layout_editor_absoluteY="245dp"
        tools:layout_editor_absoluteX="273dp"
        android:id="@+id/imageView" />



</android.support.constraint.ConstraintLayout>
